<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="tours.tourism.place.PlaceMapper">
    <select id="findAll" resultType="tours.tourism.place.PlaceResponseDto">



        <where>
         <if test = "sort == 'RATING'">
             order by rating DESC
         </if>
        <if test = "sort == 'NAME'">
            order by name DESC
        </if>
        </where>
        <if test = "city != null">
            and place.city = #{city}
        </if>
        <if test = "category != null">
            and place.category =#{category}
        </if>
    </select>
</mapper>